[alias]
    a   = add
    b   = branch
    bm  = ! git branch --merged | grep -v '*'
    bmr = ! git branch --merged | grep -v '*' | xargs git branch -d
    c   = commit
    ca  = commit --amend
    cb  = checkout -b
    ce  = commit --allow-empty -m \"empty commit\"
    co  = checkout
    cp  = cherry-pick
    d   = diff
    dh  = diff HEAD^
    ds  = diff --staged
