[user]
    name = Ryohei Shimizu
[color]
    ui = auto
[alias]
    a   = add
    b   = branch
    bm  = ! git branch --merged | grep -v '*'
    bmr = ! git branch --merged | grep -v '*' | xargs git branch -d
    c   = commit
    ca  = commit --amend
    cb  = checkout -b
    ce  = commit --allow-empty -m \"empty commit\"
    cw  = commit               -m \"wip commit\"
    co  = checkout
    cp  = cherry-pick
    d   = diff
    dh  = diff HEAD^
    ds  = diff --staged
    f   = fetch
    hub = config user.email \"47919813+ryohei-shimizu@users.noreply.github.com\"
    l   = log       --graph --oneline
    la  = log --all --graph --oneline --branches --remotes --tags --date-order
    mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
    rb  = rebase
    rs  = reset
    s   = status
    su  = submodule update
    sur = submodule update --init --recursive
[core]
    editor = vim
    pager = delta
    quotepath = false
[fetch]
    prune = true
[pull]
    rebase = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[diff]
    tool = vimdiff
[interactive]
    diffFilter = delta --color-only
[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse
    syntax-theme = Dracula
